# Database
DATABASE_URL="postgresql://username:password@localhost:5432/chips_copilot"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here"

# Stripe (Donations)
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Stripe (Subscriptions) - Chips Copilot
STRIPE_PRICE_CORE="price_your_core_plan_id"
STRIPE_PRICE_PRO="price_your_pro_plan_id"
STRIPE_SUB_WEBHOOK_SECRET="whsec_your_subscription_webhook_secret"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@legalfundraiser.com"

# File Upload
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# App Configuration
APP_NAME="Chips Copilot"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
ADMIN_EMAIL="admin@chips-copilot.com"

# Security
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key-32-chars"

# Third Party Services
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
FACEBOOK_PIXEL_ID="your-facebook-pixel-id"

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_SMS_NOTIFICATIONS="false"
ENABLE_SOCIAL_LOGIN="true"
ENABLE_CRYPTO_DONATIONS="false"

# Chips Copilot Features
FEATURE_KYC_STUB="true"
FEATURE_PUBLIC_CASES="false"

# Storage (S3/R2) - Chips Copilot
STORAGE_BUCKET="your-storage-bucket-name"
STORAGE_REGION="us-east-1"
STORAGE_ACCESS_KEY_ID="your-storage-access-key"
STORAGE_SECRET_ACCESS_KEY="your-storage-secret-key"
STORAGE_ENDPOINT="https://s3.amazonaws.com" # or your R2 endpoint

# Redis - BullMQ Queue Processing
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Worker Configuration
VAULT_WORKER_CONCURRENCY="2"
WORKER_LOG_FILE="/var/log/chips-copilot/worker.log"

# Rate Limiting
RATE_LIMIT_WINDOW="15"
RATE_LIMIT_MAX_REQUESTS="100"

# Legal/Compliance
TERMS_OF_SERVICE_URL="https://legalfundraiser.com/terms"
PRIVACY_POLICY_URL="https://legalfundraiser.com/privacy"
PLATFORM_FEE_PERCENTAGE="2.9"
STRIPE_FEE_PERCENTAGE="2.9"